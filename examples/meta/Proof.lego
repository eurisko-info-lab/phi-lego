-- Proof.lego: Base for proof assistants
-- Shared by Tactics, Auto

import Base

lang Proof (Base) :=

-----------------------------------------------------
-- Goals and holes
-----------------------------------------------------
piece Goal
  goal ::= "?" name             -- named hole
         | "?" "_"              -- anonymous hole
         | "Goal" term          -- explicit goal type
         | term "‚ä¢" term        -- goal with context

-----------------------------------------------------
-- Proof state
-----------------------------------------------------
piece ProofState
  pstate ::= "goals" "[" goallist "]"
  goallist ::= goal | goal "," goallist

-----------------------------------------------------
-- Basic proof terms
-----------------------------------------------------
piece ProofTerm
  proof ::= "exact" term        -- provide exact term
          | "assume" name       -- assume hypothesis
          | "QED"               -- proof complete

-----------------------------------------------------
-- Tests
-----------------------------------------------------
test "hole": _
test "goal": _
test "judgment": _

